<SCENE>

<!-- Initial values -->
<INITIALS>
    <frustum near="0.1" far="500"/>                 
    <translation x="-1" y="1" z="0" />               
    <rotation axis="x" angle="0" />                
    <rotation axis="y" angle="0" />                
    <rotation axis="z" angle="0" />                
    <scale sx="1" sy="1" sz="1" />         
    <reference length="5" />                        
</INITIALS>


<!-- Illumination and clear colour -->
<ILLUMINATION>
    <ambient r="0.2" g="0.2" b="0.2" a="1" />       
    <background r="0" g="0.75" b="1" a="1" />          
</ILLUMINATION>

<!-- Lights -->
<LIGHTS>    
    <LIGHT id="light0">                                    
        <enable value ="1" />                              
        <position  x="0" y="10" z="0" w="1" />             
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />          
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />      
    </LIGHT>
</LIGHTS>

<TEXTURES>
    <!-- Tree trunk -->
    <TEXTURE id="trunk">
        <file path="images/trunk-image.jpg" />               
        <amplif_factor s="2" t="2" />                           
    </TEXTURE>	
</TEXTURES>

<MATERIALS>
    <!-- Default material -->
    <MATERIAL id="defaultMaterial">                                  
        <shininess value="1" />
        <specular r="0" g="0" b="0" a="1" />        
        <diffuse r="1.0" g="1.0" b="1.0" a="1" />        
        <ambient r="0.2" g="0.2" b="0.2" a="1" />         
        <emission r="0.0" g="0.0" b="0.0" a="1" />        
    </MATERIAL>
</MATERIALS>

<!-- The leaves -->
<LEAVES>
	
</LEAVES>

<!-- The nodes -->
<NODES>

    <ROOT id="root" />     

    <!-- The root node -->
    <NODE id="root">       
        <MATERIAL id="defaultMaterial" />         
        <TEXTURE id="clear" />  

        <DESCENDANTS>
			<NODEREF id="wings" /> <!--
			<NODEREF id="wheels" />
			<NODEREF id="tail" />
			<NODEREF id="fan" />
			<NODEREF id="body" /> -->
        </DESCENDANTS>

    </NODE>

    <!-- The wings -->
   <NODE id="wings">
   		<MATERIAL id="null" />
   		<TEXTURE id="null" />

   		<DESCENDANTS>
			<NODEREF id="up wing" />
			<NODEREF id="down wing" />
			<!--<NODEREF id="wing support" />-->
   		</DESCENDANTS>
   	
   </NODE>

   <!-- The Up wing -->
   <NODE id="up wing">
   		<MATERIAL id="null" />
   		<TEXTURE id="null" />
		
   		<DESCENDANTS>
			<NODEREF id="up wing top" />
			<NODEREF id="up wing back" />
   		</DESCENDANTS>
   	
   </NODE>

   <!-- The up wing top -->
   <NODE id="up wing top">
   		<MATERIAL id="null" />
   		<TEXTURE id="null" />

		<TRANSLATION x="0" y="0.8" z="0" />
   		<ROTATION axis="x" angle="-90" />
		
   		<DESCENDANTS>
			<LEAF type="rectangle" args="-4.05 1.44 4.05 -1.44" />
				<!-- TODO PORQUE E QUE OS TRAINGULOS TEM AQL ORDEM RETARDADA -->
   		</DESCENDANTS>
   	
   </NODE> 

   <!-- The up wing back -->
   <NODE id="up wing back">
   		<MATERIAL id="null" />
   		<TEXTURE id="null" />

		<TRANSLATION x="0" y="0.8" z="0" />
   		<ROTATION axis="x" angle="90" />
		
   		<DESCENDANTS>
			<LEAF type="rectangle" args="-4.05 1.44 4.05 -1.44" />
				<!-- TODO PORQUE E QUE OS TRAINGULOS TEM AQL ORDEM RETARDADA -->
   		</DESCENDANTS>
   	
   </NODE>  

   <!-- The down wing -->
   <NODE id="down wing">
   		<MATERIAL id="null" />
   		<TEXTURE id="null" />

		<TRANSLATION x="0" y="-1.6" z="0" />
		
   		<DESCENDANTS>
			<NODEREF id="up wing" />
   		</DESCENDANTS>
   	
   </NODE> 

</NODES>

</SCENE>