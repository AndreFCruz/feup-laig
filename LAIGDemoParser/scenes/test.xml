<SCENE>

<!-- Initial values -->
<INITIALS>
        <frustum near="0.1" far="500"/>
        <translation x="-51" y="-54" z="-73" />               
        <rotation axis="x" angle="-10" />                
        <rotation axis="y" angle="-10" />                
        <rotation axis="z" angle="15" />                
        <scale sx="1" sy="1" sz="1" />         
        <reference length="5" />                        
</INITIALS>


<!-- Illumination and clear colour -->
<ILLUMINATION>
    <ambient r="0.2" g="0.2" b="0.2" a="1" />       
    <background r="0" g="0" b="0" a="1" />          
</ILLUMINATION>


<!-- Lights -->
<LIGHTS>    
    <LIGHT id="light0">                                    
        <enable value ="1" />                              
        <position  x="0" y="10" z="0" w="1" />             
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>
    
    <LIGHT id="light1">                                    
        <enable value ="1" />                             
        <position x="30" y="10" z="0" w="1" />             
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />       
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
    </LIGHT>
    
    <LIGHT id="light2">                                   
        <enable value ="1" />                              
        <position x="0" y="10" z="20" w="1" />                 
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />      
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
    </LIGHT>

    <LIGHT id="light3">                                   
        <enable value ="1" />                              
        <position x="30" y="10" z="20" w="1" />                 
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />             
        <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />       
        <specular r="0.6" g="0.6" b="0.6" a="1.0" />      
    </LIGHT>
    
</LIGHTS>

<!-- Textures -->
<TEXTURES>
    <!-- Tree trunk -->
    <TEXTURE id="trunk">
        <file path="images/trunk-image.jpg" />               
        <amplif_factor s="2" t="2" />                           
    </TEXTURE>

    <!-- Glass work -->
    <TEXTURE id="patch texture">
        <file path="images/patch_texture.jpg" />               
        <amplif_factor s="15" t="10" />                           
    </TEXTURE>
    
</TEXTURES>


<MATERIALS>

    <!-- Tree trunk material -->
    <MATERIAL id="trunkTreeMaterial">                                  
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />        
        <diffuse r="0.6" g="0.298" b="0.0" a="1" />      
        <ambient r="0.1" g="0.1" b="0.1" a="1" />         
        <emission r="0.0" g="0.0" b="0.0" a="1" />       
    </MATERIAL>

    <!-- A default material -->
    <MATERIAL id="defaultMaterial">                                  
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />        
        <diffuse r="0.4" g="0.4" b="0.4" a="1" />       
        <ambient r="0.4" g="0.4" b="0.4" a="1" />         
        <emission r="0.0" g="0.0" b="0.0" a="1" />        
    </MATERIAL>

</MATERIALS>


<!-- The leaves -->
<LEAVES>
    
</LEAVES>


<!-- The nodes -->
<NODES>

    <ROOT id="root" />     

    <!-- The root node -->
    <NODE id="root">
        <MATERIAL id="null" />
        <TEXTURE id="clear" />

        <DESCENDANTS>
            <NODEREF id="patch node" />
        </DESCENDANTS>
    </NODE>
    
    <NODE id="patch node">
        <MATERIAL id="trunkTreeMaterial" />
        <TEXTURE id="patch texture" />

        <SCALE sx="3" sy="3" sz="3" />
        
        <DESCENDANTS>
            <LEAF type="patch" args="20 20" >
                <CPLINE>
                    <CPOINT xx="2" yy="0" zz="2.5" ww="1" />
                    <CPOINT xx="2" yy="0" zz="2.5" ww="1" />
                    <CPOINT xx="2" yy="0" zz="5" ww="1" />
                    <CPOINT xx="2" yy="0" zz="7.5" ww="1" />
                    <CPOINT xx="2" yy="0" zz="7.5" ww="1" />
                </CPLINE>
                <CPLINE>
                    <CPOINT xx="2" yy="0" zz="2.5" ww="1" />
                    <CPOINT xx="2" yy="0" zz="0" ww="1" />
                    <CPOINT xx="2" yy="10" zz="5" ww="0.5" />
                    <CPOINT xx="2" yy="0" zz="10" ww="1" />
                    <CPOINT xx="2" yy="0" zz="7.5" ww="1" />
                </CPLINE>
                <CPLINE>
                    <CPOINT xx="0" yy="0" zz="2.5" ww="1" />
                    <CPOINT xx="0" yy="0" zz="0" ww="1" />
                    <CPOINT xx="0" yy="10" zz="5" ww="0.5" />
                    <CPOINT xx="0" yy="0" zz="10" ww="1" />
                    <CPOINT xx="0" yy="0" zz="7.5" ww="1" />
                </CPLINE>
                <CPLINE>
                    <CPOINT xx="0" yy="0" zz="2.5" ww="1" />
                    <CPOINT xx="0" yy="0" zz="2.5" ww="1" />
                    <CPOINT xx="0" yy="0" zz="5" ww="1" />
                    <CPOINT xx="0" yy="0" zz="7.5" ww="1" />
                    <CPOINT xx="0" yy="0" zz="7.5" ww="1" />
                </CPLINE>
            </LEAF>
        </DESCENDANTS>
    </NODE>

</NODES>

</SCENE>
