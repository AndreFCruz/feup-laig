<SCENE>

<!-- Initial values -->
<INITIALS>
    <frustum near="0.1" far="500"/>                 
    <translation x="-1" y="1" z="0" />               
    <rotation axis="x" angle="0" />                
    <rotation axis="y" angle="0" />                
    <rotation axis="z" angle="0" />                
    <scale sx="1" sy="1" sz="1" />         
    <reference length="5" />                        
</INITIALS>


<!-- Illumination and clear colour -->
<ILLUMINATION>
    <ambient r="0.4" g="0.4" b="0.4" a="1" />       
    <background r="0" g="0" b="0" a="1" />          
</ILLUMINATION>


<!-- Lights -->
<LIGHTS>	
	<LIGHT id="liaedaed">
        <enable value ="1" />
        <position  x="0" y="10" z="0" w="1" />       	   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />        	 
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />      
    </LIGHT>

    <LIGHT id="aedaed">                                   
        <enable value ="1" />                   	       
        <position x="30" y="10" z="20" w="1" />       			
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />           	
        <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />       
        <specular r="0.6" g="0.6" b="0.6" a="1.0" />      
    </LIGHT>
    
</LIGHTS>

<!-- Textures -->
<TEXTURES>

     <!-- Tree leaves -->
    <TEXTURE id="board">
        <file path="images/board-matrix.jpg" />                
        <amplif_factor s="9" t="9" />                           
    </TEXTURE>

	<TEXTURE id="wood">
		<file path="images/wood.jpg" />
		<amplif_factor s="1" t="1" />
	</TEXTURE>
    
</TEXTURES>


<MATERIALS>

    <!-- A default material -->
    <MATERIAL id="defaultMaterial">                                  
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />
        <diffuse r="0.4" g="0.4" b="0.4" a="1" />
        <ambient r="0.4" g="0.4" b="0.4" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

    <!-- A black material -->
    <MATERIAL id="black">         
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />
        <diffuse r="0.1" g="0.1" b="0.6" a="1" />
        <ambient r="0.1" g="0.1" b="0.6" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

    <!-- A red material -->
    <MATERIAL id="red">         
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />
        <diffuse r="0.1" g="0.5" b="0.1" a="1" />
        <ambient r="0.1" g="0.5" b="0.1" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

</MATERIALS>

<ANIMATIONS>

</ANIMATIONS>

<!-- The leaves -->
<LEAVES>
<!-- THIS SECTION IS USELESS -->
</LEAVES>


<!-- The nodes -->
<NODES>

	<ROOT id="root" />

	<NODE id="root">
	
		<MATERIAL id="defaultMaterial" />
		<TEXTURE id="null" />

		<DESCENDANTS>
			<NODEREF id="board" />
			<NODEREF id="board base" />
			<NODEREF id="white piece" />
			<NODEREF id="black piece" />
			<NODEREF id="worker" />
		</DESCENDANTS>

	</NODE>

	<NODE id="board">
		<MATERIAL id="defaultMaterial" />
		<TEXTURE id="board" />

		<TRANSLATION x="0" y="0" z="9" />
		<ROTATION axis="x" angle="-90" />

		<DESCENDANTS>
			<LEAF type="rectangle" args="0 9 9 0" />
		</DESCENDANTS>

	</NODE>

	<NODE id="board base">
		<MATERIAL id="null" />
		<TEXTURE id="wood" />

		<TRANSLATION x="4.5" y="-0.01" z="4.5" />
		<SCALE sx="13" sy="1" sz="13" />
		<TRANSLATION x="0" y="-0.5" z="0" />

		<DESCENDANTS>
			<NODEREF id="cube" />
		</DESCENDANTS>

	</NODE>

	<NODE id="white piece">
		<MATERIAL id="defaultMaterial" />
		<TEXTURE id="null" />

		<!--<TRANSLATION x="2" y="0" z="3" />-->

		<DESCENDANTS>
			<NODEREF id="piece"/>
		</DESCENDANTS>

	</NODE>

	<NODE id="black piece">
		<MATERIAL id="black" />
		<TEXTURE id="null" />

		<!--<TRANSLATION x="8" y="0" z="5" />-->

		<DESCENDANTS>
			<NODEREF id="piece"/>
		</DESCENDANTS>

	</NODE>

	<NODE id="worker">
		<MATERIAL id="red" />
		<TEXTURE id="null" />

		<TRANSLATION x="0.5" y="0" z="0.5" />
		<ROTATION axis="x" angle="-90" />

		<DESCENDANTS>
			<LEAF type="cylinder" args="1 0.4 0.4 20 20 1 1" />
		</DESCENDANTS>

	</NODE>

	<NODE id="piece">
		<MATERIAL id="null" />
		<TEXTURE id="null" />

		<TRANSLATION x="0.5" y="0.15" z="0.5" />
		<SCALE sx="0.4" sy="0.15" sz="0.4" />

		<DESCENDANTS>
			<LEAF type="sphere" args="1 20 20" />
		</DESCENDANTS>

	</NODE>


	 <!-- Unit Cube -->
	 <NODE id="cube">
			<MATERIAL id="null" />
			<TEXTURE id="null" />
		
			<DESCENDANTS>
			<NODEREF id="cube top" />
			<NODEREF id="cube front" />
			<NODEREF id="cube left" />
			<NODEREF id="cube right" />
			<NODEREF id="cube back" />
			<NODEREF id="cube under" />
			</DESCENDANTS>
		
	 </NODE>

	 <!-- Cube's top -->
	 <NODE id="cube top">
			<MATERIAL id="null" />
			<TEXTURE id="null" />

			<TRANSLATION x="0" y="0.5" z="0" />
			<ROTATION axis="x" angle="-90" />
		
			<DESCENDANTS>
			<LEAF type="rectangle" args="-0.5 0.5 0.5 -0.5" />
			</DESCENDANTS>
		
	 </NODE>

	 <!-- Cube's front -->
	 <NODE id="cube front">
			<MATERIAL id="null" />
			<TEXTURE id="null" />

		<TRANSLATION x="0" y="0" z="0.5" />
		
			<DESCENDANTS>
			<LEAF type="rectangle" args="-0.5 0.5 0.5 -0.5" />
			</DESCENDANTS>
		
	 </NODE>

	 <!-- Cube's left -->
	 <NODE id="cube left">
			<MATERIAL id="null" />
			<TEXTURE id="null" />

			<TRANSLATION x="-0.5" y="0" z="0" />
			<ROTATION axis="y" angle="-90" />
		
			<DESCENDANTS>
			<LEAF type="rectangle" args="-0.5 0.5 0.5 -0.5" />
			</DESCENDANTS>
		
	 </NODE>

	 <!-- Cube's right -->
	 <NODE id="cube right">
			<MATERIAL id="null" />
			<TEXTURE id="null" />

		<TRANSLATION x="0.5" y="0" z="0" />
			<ROTATION axis="y" angle="90" />
		
			<DESCENDANTS>
			<LEAF type="rectangle" args="-0.5 0.5 0.5 -0.5" />
			</DESCENDANTS>
		
	 </NODE>

	 <!-- Cube's back -->
	 <NODE id="cube back">
			<MATERIAL id="null" />
			<TEXTURE id="null" />

		<TRANSLATION x="0" y="0" z="-0.5" />
			<ROTATION axis="x" angle="180" />
		
			<DESCENDANTS>
			<LEAF type="rectangle" args="-0.5 0.5 0.5 -0.5" />
			</DESCENDANTS>
		
	 </NODE>

	 <!-- Cube's under -->
	 <NODE id="cube under">
			<MATERIAL id="null" />
			<TEXTURE id="null" />

		<TRANSLATION x="0" y="-0.5" z="0" />
			<ROTATION axis="x" angle="90" />
		
			<DESCENDANTS>
			<LEAF type="rectangle" args="-0.5 0.5 0.5 -0.5" />
			</DESCENDANTS>
		
	 </NODE>

</NODES>

</SCENE>