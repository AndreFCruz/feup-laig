	<NODE id="cube right">
		<MATERIAL id="null" />
		<TEXTURE id="null" />

		<TRANSLATION x="0.5" y="0" z="0" />
		<ROTATION axis="y" angle="90" />
	
		<DESCENDANTS>
		<LEAF type="rectangle" args="-0.5 0.5 0.5 -0.5" />
		</DESCENDANTS>
	
	</NODE>

	<!-- Cube's back -->
	<NODE id="cube back">
		<MATERIAL id="null" />
		<TEXTURE id="null" />

		<TRANSLATION x="0" y="0" z="-0.5" />
		<ROTATION axis="x" angle="180" />
	
		<DESCENDANTS>
		<LEAF type="rectangle" args="-0.5 0.5 0.5 -0.5" />
