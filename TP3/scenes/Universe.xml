		<DESCENDANTS>
		<LEAF type="rectangle" args="-0.5 0.5 0.5 -0.5" />
		</DESCENDANTS>
	
	</NODE>

	<!-- Skybox's back -->
	<NODE id="skybox back">
		<MATERIAL id="null" />
		<TEXTURE id="skybox back" />

		<TRANSLATION x="0" y="0" z="0.5" />
		<ROTATION axis="z" angle="180" />
		<ROTATION axis="x" angle="180" />
	
		<DESCENDANTS>
		<LEAF type="rectangle" args="-0.5 0.5 0.5 -0.5" />
		</DESCENDANTS>
	
	</NODE>

	<!-- Slybox's under -->
	<NODE id="skybox under">
		<MATERIAL id="null" />
		<TEXTURE id="skybox under" />

		<TRANSLATION x="0" y="-0.5" z="0" />
		<ROTATION axis="y" angle="90" />
		<ROTATION axis="x" angle="-90" />
	
		<DESCENDANTS>
		<LEAF type="rectangle" args="-0.5 0.5 0.5 -0.5" />
		</DESCENDANTS>
	
	</NODE>

	<!-- Unit Cube -->
	<NODE id="cube">
		<MATERIAL id="null" />
		<TEXTURE id="null" />
	
		<DESCENDANTS>
			<NODEREF id="cube top" />
			<NODEREF id="cube front" />
			<NODEREF id="cube left" />
			<NODEREF id="cube right" />
			<NODEREF id="cube back" />
			<NODEREF id="cube under" />
		</DESCENDANTS>
	
	</NODE>

	<!-- Cube's top -->
	<NODE id="cube top">
		<MATERIAL id="null" />
		<TEXTURE id="null" />

		<TRANSLATION x="0" y="0.5" z="0" />
		<ROTATION axis="x" angle="-90" />
	
		<DESCENDANTS>
		<LEAF type="rectangle" args="-0.5 0.5 0.5 -0.5" />
		</DESCENDANTS>
	
	</NODE>

	<!-- Cube's front -->
	<NODE id="cube front">
		<MATERIAL id="null" />
		<TEXTURE id="null" />

		<TRANSLATION x="0" y="0" z="0.5" />
	
		<DESCENDANTS>
		<LEAF type="rectangle" args="-0.5 0.5 0.5 -0.5" />
		</DESCENDANTS>
	
	</NODE>

	<!-- Cube's left -->
	<NODE id="cube left">
		<MATERIAL id="null" />
		<TEXTURE id="null" />

		<TRANSLATION x="-0.5" y="0" z="0" />
		<ROTATION axis="y" angle="-90" />
	
		<DESCENDANTS>
		<LEAF type="rectangle" args="-0.5 0.5 0.5 -0.5" />
		</DESCENDANTS>
	
	</NODE>

